<div class="post_form">
    <%= form_with model: @post do |form| %>
        <div class="field">
            <%= @post.errors.full_messages.each do |message| %>
                <div> <%= message %> </div>
            <% end if @post.errors.any? %>
        </div>
    
        <div class="field">
            <div><%= form.label :title %></div>
            <div><%= form.text_field :title %></div>
        </div>
    
        <div class="field">
            <div><%= form.label :body %></div>
            <div><%= form.textarea :body, rows: 10 %></div>
        </div>
    
        <div class="field">
            <div><%= form.submit %></div>
        </div>
    <% end %>
</div>

