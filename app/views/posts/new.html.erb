<%= form_with model: @post do |form| %>
    <div>
        <%= @post.errors.full_messages.each do |message| %>
            <div> <%= message %> </div>
        <% end if @post.errors.any? %>
    </div>

    <div>
        <%= form.label :title %>
        <%= form.text_field :title %>
    </div>

    <div>
        <%= form.label :body %>
        <%= form.text_field :body %>
    </div>

    <div>
        <%= form.submit %>
    </div>
<% end %>
